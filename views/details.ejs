<html>
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>
    
    <div class="details content">
        <h2><%= blog.title %></h2>
        <div class="content">
            <p><%= blog.body %></p>
        </div>
      <a class="delete" onclick="deleteBlog('<%= blog._id %>')">Delete</a>
    </div>
   
    <script>
        function deleteBlog(id) {
            fetch('/blogs/' + id, {
                method: 'DELETE'                
            }).then(window.location  = '/all-blogs')                        
        }
    </script>

</body>
</html>